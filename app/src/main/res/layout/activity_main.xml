        app:cbn_fabColor="@color/yellow"
        app:cbn_iconColor="@color/white_25op"
        app:cbn_height="78dp"
        app:cbn_icon_size="22dp"
        app:cbn_curve_radius="44dp"
        app:cbn_selected_icon_size="48dp"
        app:cbn_selectedIconColor="@color/primary"
        app:cbn_titleColor="@color/yellow"
        app:cbn_titleFont="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

